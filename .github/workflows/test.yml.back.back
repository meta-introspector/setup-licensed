name: "Test"
on: push

jobs:
  test:
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [ubuntu-latest, macOS-latest]
    steps:
    - uses: meta-introspector/checkout@v3
    - uses: meta-introspector/setup-node@v3
      with:
        cache: npm
        node-version: 18.x
    - run: npm ci
    - run: npm test
